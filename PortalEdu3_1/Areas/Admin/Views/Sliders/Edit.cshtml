@model PortalEDU.Models.Slider;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Editar</h1>

<br />
<br />
<h3 class="text-center">Editar un nuevo Slider</h3>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary=" ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"> </span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Estado"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="Estado" class="form-check" />
                    <span asp-validation-for="Estado" class="text-danger"> </span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImagen"> </label>
                </div>
                <div class="col-8">
                    <input type="file" asp-for="UrlImagen" name="archivos" id="SubidaArchivoSlider" multiple class="form-control-file" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id}">Actualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a la vista</a>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>

    <div class="col-4 pt-3">
        <img src="@Model.UrlImagen"  width="100%" style="border-radius:5px; border:1px solid #bbb9b9; position:center;" />
    </div>

</form>
